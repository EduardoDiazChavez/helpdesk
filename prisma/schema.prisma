generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  name         String
  lastName     String         @map("last_name")
  password     String
  roleId       Int            @map("role_id")
  isActive     Boolean        @default(true) @map("is_active")
  createdDate  DateTime       @default(now()) @map("created_date")
  role         Role           @relation(fields: [roleId], references: [id])
  userCompanies UserCompany[]
  requests     Request[]
  requestLogs  RequestLog[]

  @@map("user")
}

model Company {
  id            Int            @id @default(autoincrement())
  name          String
  slug          String         @unique
  address       String
  userCompanies UserCompany[]
  requests      Request[]
  processes     CompanyProcess[]

  @@map("company")
}

model UserCompany {
  userId         Int      @map("user_id")
  companyId      Int      @map("company_id")
  isAdmin        Boolean  @default(false) @map("is_admin")
  dateAssociated DateTime @default(now()) @map("date_associated")

  user    User    @relation(fields: [userId], references: [id])
  company Company @relation(fields: [companyId], references: [id])

  @@id([userId, companyId])
  @@map("user_company")
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]

  @@map("role")
}

model RequestType {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  requests  Request[]

  @@map("request_type")
}

model Process {
  id           Int              @id @default(autoincrement())
  name         String           @unique
  description  String
  code         String
  requests     Request[]
  companyLinks CompanyProcess[]

  @@map("process")
}

model Priority {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  number   Int
  requests Request[]

  @@map("priority")
}

model RequestStatus {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  requests Request[]

  @@map("request_status")
}

model Request {
  id              Int           @id @default(autoincrement())
  requestTypeId   Int           @map("request_type_id")
  requesterId     Int           @map("requester_id")
  processId       Int           @map("process_id")
  subject         String
  location        String
  description     String
  priorityId      Int           @map("priority_id")
  dateRequested   DateTime      @default(now()) @map("date_requested")
  requestStatusId Int           @map("request_status_id")
  companyId       Int           @map("company_id")

  requestType RequestType @relation(fields: [requestTypeId], references: [id])
  requester   User        @relation(fields: [requesterId], references: [id])
  process     Process     @relation(fields: [processId], references: [id])
  priority    Priority    @relation(fields: [priorityId], references: [id])
  status      RequestStatus @relation(fields: [requestStatusId], references: [id])
  company     Company     @relation(fields: [companyId], references: [id])
  logs        RequestLog[]
  pictures    RequestPicture[]

  @@map("request")
}

model CompanyProcess {
  id         Int     @id @default(autoincrement())
  processId  Int     @map("process_id")
  companyId  Int     @map("company_id")
  isEnabled  Boolean @default(true) @map("is_enabled")

  process Process @relation(fields: [processId], references: [id])
  company Company @relation(fields: [companyId], references: [id])

  @@unique([processId, companyId])
  @@map("company_process")
}

model RequestLog {
  id         Int      @id @default(autoincrement())
  requestId  Int      @map("request_id")
  userId     Int      @map("user_id")
  actionDone String   @map("action_done")
  logDate    DateTime @default(now()) @map("log_date")

  request Request @relation(fields: [requestId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@map("request_log")
}

model RequestPicture {
  id          Int      @id @default(autoincrement())
  requestId   Int      @map("request_id")
  pictureUrl  String   @map("picture_url")
  dateCreated DateTime @default(now()) @map("date_created")

  request Request @relation(fields: [requestId], references: [id])

  @@map("request_picture")
}
